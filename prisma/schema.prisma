// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // Prisma Postgres creates AIBO_DB_PRISMA_DATABASE_URL
  // If using standard Postgres, set DATABASE_URL instead
  url      = env("AIBO_DB_PRISMA_DATABASE_URL")
}

model Partner {
  id          String   @id @default(uuid())
  name        String
  phoneNumbers Json    // Array of phone numbers stored as JSON
  city        String
  state       String
  pinCode     String   @map("pin_code")
  address     String
  email       String
  uniqueCode  String   @unique @map("unique_code")
  adminNotes  String?  @map("admin_notes") @db.Text
  createdAt   DateTime @default(now()) @map("created_at")

  @@map("partners")
}
